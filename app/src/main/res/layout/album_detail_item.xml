<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="albumDetail"
            type="com.example.vinyls_jetpack_application.models.Album" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray"
        android:foregroundGravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="20dp"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="40dp"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotationX="0"
                    tools:srcCompat="@tools:sample/avatars"
                    android:contentDescription="@string/album_cover_placeholder"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="@string/title_albums"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/add_comment"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:elevation="20dp"
                android:shadowDy="20"
                android:shadowDx="20"
                android:shadowColor="@color/black"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="@string/title_detail_album" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#CC000000"
                        android:textStyle="bold"
                        android:text="@string/date_album" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#B3000000"
                        android:text="@string/date_album" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#CC000000"
                        android:textStyle="bold"
                        android:text="@string/genre" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#B3000000"
                        android:text="@string/genre" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#CC000000"
                        android:textStyle="bold"
                        android:text="@string/record_label" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#B3000000"
                        android:text="@string/record_label" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#CC000000"
                        android:textStyle="bold"
                        android:text="@string/description"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#B3000000"
                        android:text="@string/description_value" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:elevation="20dp"
                android:shadowDy="20"
                android:shadowDx="20"
                android:shadowColor="@color/black"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:text="@string/tracks"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="40dp"
                        android:backgroundTint="#FF9800"
                        tools:ignore="MissingConstraints"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:scaleType="fitCenter"
                            android:rotationX="0"
                            android:layout_gravity="center"
                            tools:srcCompat="@drawable/play_3917607"
                            android:contentDescription="@string/album_cover_placeholder"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp">
                        <TextView
                            android:text="@string/tracks"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="3:45"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="40dp"
                        android:backgroundTint="#FF9800"
                        tools:ignore="MissingConstraints"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:scaleType="fitCenter"
                            android:rotationX="0"
                            android:layout_gravity="center"
                            tools:srcCompat="@drawable/play_3917607"
                            android:contentDescription="@string/album_cover_placeholder"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp">
                        <TextView
                            android:text="@string/tracks"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="3:45"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="40dp"
                        android:backgroundTint="#FF9800"
                        tools:ignore="MissingConstraints"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:scaleType="fitCenter"
                            android:rotationX="0"
                            android:layout_gravity="center"
                            tools:srcCompat="@drawable/play_3917607"
                            android:contentDescription="@string/album_cover_placeholder"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp">
                        <TextView
                            android:text="@string/tracks"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="3:45"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
