<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="track" type="com.example.vinyls_jetpack_application.models.Track" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:id="@+id/albumDetailTrack"
    >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="40dp"
            android:backgroundTint="#FF9800"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:scaleType="fitCenter"
                android:rotationX="0"
                android:layout_gravity="center"
                android:src="@drawable/play_3917607"
                android:contentDescription="@string/album_cover_placeholder"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:id="@+id/track_name"
                android:text="@{track.name}"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/track_duration"
                android:text="@{track.duration}"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</layout>